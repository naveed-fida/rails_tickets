<div class="project">
  <h2><%= @project.name %></h2>
  <p><%= @project.description %></p>

  <% if current_user %>
    <p class="actions">
      <%= link_to 'Edit', edit_project_path(@project) %>
      <%= link_to 'Delete', project_path(@project), method: :delete %>
    </p>
  <% end %>

  <%= render '/shared/tickets_list', tickets: @project.tickets %>
</div>
